<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />

    <title>Quiz app</title>
  </head>
  <body style="background-color: rgb(213, 201, 235)">
    <div class="container" style="margin-top: 70px">
      <div class="card" style="border-top: 0.25rem solid #b47ec9">
        <div class="card-header"><h3>Welcome to the quiz</h3></div>
        <div class="card-body">
          This is a small quiz created for testing your skills.
        </div>
      </div>
      <form class="form" action="/formograph/<%=id%>" method="post">
        <% arObj.map(function (item, index){ %>
        <div
          class="card"
          style="
            margin-top: 25px;
            margin-bottom: 25px;
            border-left: 0.25rem solid #b47ec9;
          "
        >
          <div class="card-header"><%= item.question %></div>
          <div class="card-body">
            <% if (item.options === "radio" || item.options === "checkbox") { %>
            <!-- <h5 class="card-title">Special title treatment</h5>
          <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
          <a href="#" class="btn btn-primary">Go somewhere</a> -->
            <% if (item.noOfItem != []) { %> <% item.noOfItem.map(function
            (items, oindex) { %>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="<%= index %>"
                value="<%= oindex %>"
                id="flexCheckDefault"
              />
              <label class="form-check-label" for="flexCheckDefault">
                <%= items %>
              </label>
            </div>
            <%})%> <%}%> <% } else if (item.options == "text") { %>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Text</span>
              <input
                type="text"
                class="form-control"
                placeholder="answer"
                name="<%= item.question %>"
              />
            </div>
            <%} else if (item.options == "textarea") {%>
            <div class="input-group">
              <span class="input-group-text">textarea</span>
              <textarea
                class="form-control"
                name="<%=item.question%>"
                aria-label="With textarea"
              ></textarea>
            </div>
            <%} else if (item.options == "email") {%>
            <div class="input-group mb-3">
              <input
                type="text"
                class="form-control"
                placeholder="email"
                name="<%= item.question %>"
                aria-label="Recipient's username"
                aria-describedby="basic-addon2"
              />
              <!-- <span class="input-group-text" id="basic-addon2">@example.com</span> -->
            </div>
            <%}%>
          </div>
        </div>
        <% }) %>
        <button class="btn publish-btn btn-success" type="submit" name="button">
          SUBMIT
        </button>
      </form>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
      crossorigin="anonymous"
    ></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
    -->
  </body>
</html>
